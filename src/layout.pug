block settings
    -
        const settings = {
            page: {
                name: ''
            }
        };

doctype html
html(lang="ru")
    head
        include ./template-parts/common/meta

    body.page#top(class="page--" + settings.page.name)
        include ./template-parts/common/header

        main._body
            block content

        include ./template-parts/common/footer
        include ./template-parts/common/popups
        include ./template-parts/common/scripts